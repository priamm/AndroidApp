<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.enecuum.androidapp.ui.fragment.new_account_pin.NewAccountPinFragment"
    android:orientation="vertical"
    android:background="@color/navy"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp">
        <EditText

            android:textSize="16sp"
            android:lineSpacingExtra="8sp"
            android:textColorHint="@color/hinto"
            android:textColor="@color/navy"
            android:hint="@string/create_your_pin"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:gravity="center"
            android:inputType="numberPassword"
            android:id="@+id/pin1"
            android:nextFocusDown="@id/pin2"
            android:imeOptions="actionNext"
            android:paddingTop="2dp"
            android:cursorVisible="false"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dot_1"
                android:layout_gravity="center"
                android:id="@+id/pin1_1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="invisible"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dot_1"
                android:layout_gravity="center"
                android:id="@+id/pin1_2"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="invisible"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dot_1"
                android:layout_gravity="center"
                android:id="@+id/pin1_3"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="invisible"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dot_1"
                android:layout_gravity="center"
                android:id="@+id/pin1_4"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="invisible"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">
        <EditText
            android:textSize="16sp"
            android:paddingTop="2dp"
            android:lineSpacingExtra="8sp"
            android:textColorHint="@color/hinto"
            android:textColor="@color/navy"
            android:hint="@string/confirm"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:gravity="center"
            android:inputType="numberPassword"
            android:id="@+id/pin2"
            android:nextFocusDown="@id/pin2"
            android:imeOptions="actionDone"
            android:cursorVisible="false"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="16dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dot_1"
                android:layout_gravity="center"
                android:id="@+id/pin2_1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="invisible"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dot_1"
                android:layout_gravity="center"
                android:id="@+id/pin2_2"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="invisible"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dot_1"
                android:layout_gravity="center"
                android:id="@+id/pin2_3"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="invisible"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dot_1"
                android:layout_gravity="center"
                android:id="@+id/pin2_4"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="invisible"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
