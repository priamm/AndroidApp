<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.enecuum.androidapp.ui.activity.change_pin.ChangePinActivity"
    android:background="@color/navy"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="35dp"
        android:layout_marginBottom="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:textStyle="normal"
        android:textColor="@android:color/white"
        android:lineSpacingExtra="8sp"
        tools:text="Enter current PIN"
        android:layout_gravity="center"
        android:id="@+id/currentTitle"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText

            android:textSize="16sp"
            android:lineSpacingExtra="8sp"
            android:textColorHint="@color/white_87"
            android:textColor="@color/navy"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:gravity="center"
            android:inputType="numberPassword"
            android:id="@+id/pinText"
            android:imeOptions="actionDone"
            android:paddingTop="2dp"
            android:cursorVisible="false"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:hint="@string/enter_your_pin"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dot_1"
                android:layout_gravity="center"
                android:id="@+id/pin1"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="invisible"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dot_1"
                android:layout_gravity="center"
                android:id="@+id/pin2"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="invisible"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dot_1"
                android:layout_gravity="center"
                android:id="@+id/pin3"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="invisible"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dot_1"
                android:layout_gravity="center"
                android:id="@+id/pin4"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="invisible"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:enabled="false"
        android:text="@string/change_pin"
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:letterSpacing="0.04"
        android:background="@drawable/standard_button_background"
        android:layout_marginBottom="21dp"/>
</LinearLayout>
